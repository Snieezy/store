<h1><%= product.name %></h1>

<div class="row">
  <div class="col-md-4">
    <img src="../img/<%= product.id %>.jpg" float="left">
  </div>
  <div class="col-md-4 table-header">
    Price:
  </div>
  <div class="col-md-4">
    <%= product.price %>
  </div>
  <div class="col-md-4 table-header">
    Available amount:
  </div>
  <div class="col-md-4">
    <%= product.quantity %>
  </div>
  <%= yield %>
</div>
