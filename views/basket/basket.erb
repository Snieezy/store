<h1>Your basket</h1>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total netto</th>
      <th>Total brutto</th>
    </tr>
  </thead>
  <tbody>
    <% basket_products.each do |pr| %>
      <tr class="table-row">
        <td><%= pr.id %></td>
        <td><a href="/<%= pr.id %>"><%= pr.name %></a></td>
        <td><%= pr.quantity %></td>
        <td><%= pr.price %></td>
        <td><%= pr.netto_price %></td>
        <td><%= pr.brutto_price %></td>
        <td><a class="btn" href="/<%= pr.id %>/delete">Delete</a></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3"></td>
      <td align="right">Total:</td>
      <td><%= sum_netto %></td>
      <td><%= sum_brutto %></td>
    </tr>
  </tfoot>
</table>
